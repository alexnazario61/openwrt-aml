include $(INCLUDE_DIR)/package.mk

TAR_CMD=$(HOST_TAR) -C $(1)/ $(TAR_OPTIONS)

define KernelPackage/ap6212
  CATEGORY:=ampak Properties
  TITLE:=ampak ap6212 wifi AP driver
  FILES:=$(PKG_BUILD_DIR)/bcmdhd_1_141_xx/dhd.ko
  DEPENDS:=@TARGET_ampak_ap6212
  AUTOLOAD:=$(call AutoLoad,90,ap6212)
  SUBMENU:=Drivers
  MENU:=1
endef

define KernelPackage/ap6212/config
	source "$(SOURCE)/Config-ap6212.in"
endef

define Build/Compile
	$(MAKE) -C "$(LINUX_DIR)" \
		CROSS_COMPILE="$(TARGET_CROSS)" \
		ARCH="$(LINUX_KARCH)" \
		SUBDIRS="$(PKG_BUILD_DIR)/bcmdhd_1_141_xx/" \
		$(foreach c, $(PKG_KCONFIG),$(if $(CONFIG_$c),CONFIG_$(c)=y))\
		modules
endef

define KernelPackage/ap6210/install
	$(INSTALL_DIR) $(1)/lib/wifi/
	$(INSTALL_BIN) ./files/mt7620.sh $(1)/lib/wifi/
	$(INSTALL_DIR) $(1)/etc/Wireless/mt7620/
	$(INSTALL_BIN) ./files/mt7620.dat $(1)/etc/Wireless/mt7620/
	$(INSTALL_BIN) ./files/mt7620.dat $(1)/etc/Wireless/mt7620/mt7620.dat.orig
	-$(INSTALL_BIN) ./files/mt7620.eeprom.bin $(1)/etc/Wireless/mt7620/
endef

$(eval $(call KernelPackage,ap6212))
